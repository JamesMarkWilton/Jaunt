<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Jaunt</title>

    <%= include_gon(:init => true) %>
    <%= render 'favicon' %>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key=<%= ENV['GOOGLE_API_KEY'] %>&libraries=places"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "layouts/nav" %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>" id="flash"><%= message %></div>
      <% end %>
      <%= yield %>
      <script>$('#flash').delay(2000).fadeOut(800)</script>
  </body>
</html>
