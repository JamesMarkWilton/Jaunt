<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div id="map" style="width:100%;height:380px;"></div>
      <script>
        window.onload = function initMap() {

          var myLatLng = {lat: parseInt(gon.jaunt.lat), lng: parseInt(gon.jaunt.lng)}
          //var myLatLng = {lat: 37.5665, lng: 126.9780}

          var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 9,
            minZoom: 4,
            center: myLatLng
          })

        self.map = map

          new google.maps.Marker({map: self.map, position: myLatLng})

      }
    </script>
  </div>
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h2> <%= @jaunt.title %> </h2>
      </div>
      <div class="panel-body">
        <h2> <%= @jaunt.description  %></h2>
      </div>
    </div>

    <% @jaunt.locations.each do |location| %>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2> <%= location.address %> </h2>
        </div>
        <div class="panel-body">
          <h2> <%= location.description  %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
